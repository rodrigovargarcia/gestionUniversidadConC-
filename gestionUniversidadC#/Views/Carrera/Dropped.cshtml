@model List<gestionUniversidadC_.Models.TableViewModels.CarreraTableViewModels>
@{
    ViewBag.Title = "Papelera";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-lg-12">

        <table class="table table-bordered">
            <tr style="text-align:center;">
                <td>#</td>
                <td>Nombre</td>
                <td>Duración</td>
            </tr>

            @foreach (var oElemento in Model.Where(e => e.Estado == 2))
            {
                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.Nombre</td>
                    <td>@oElemento.DuracionAnios</td>

                    <td style="text-align:center; justify-content: space-around;">
                        <input type="button" value="Dar de alta" class="btn btn-success" onclick="darAlta(@oElemento.Id)" />
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<script>
    function darAlta(id) {
        var confirmacion = confirm("¿Seguro quieres dar de alta?");
        
        if (confirmacion) {
            document.location.href = '@Url.Content("~/Carrera/Enable/")' + id;
        }
        else
        {
            alert("Ocurrió un error :(");
        }
    }
</script>