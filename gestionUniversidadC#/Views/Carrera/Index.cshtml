@model List<gestionUniversidadC_.Models.TableViewModels.CarreraTableViewModels>
@{
    ViewBag.Title = "Carreras";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-lg-12 mb-3">
        <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/Carrera/Add")'" value="Nueva Carrera" />
    </div>
</div>

<div class="row">
    <div class="col-lg-12 mb-3">
        <input type="button" class="btn btn-secondary" onclick="document.location.href='@Url.Content("~/Carrera/Dropped")'" value="Papelera" />
    </div>
</div>


<div class="row justify-content-center">
    <div class="col-lg-6 align-text-bottom">
        <table class="table table-bordered col-lg-auto">
            <tr style="text-align:center;">
                <td>#</td>
                <td>Nombre</td>
                <td>Duración</td>
                <td>Acción</td>
            </tr>

            @foreach (var oElemento in Model.Where(e => e.Estado == 1))
            {
                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.Nombre</td>
                    <td>@oElemento.DuracionAnios</td>

                    <td style="text-align:center;">
                        <input type="button" value="Editar" class="btn btn-secondary" onclick="document.location.href='@Url.Content("~/Carrera/Edit/" + oElemento.Id)'" />
                        <input type="button" value="Eliminar" class="btn btn-danger" onclick="confirmaEliminacion(@oElemento.Id)" />
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<script>
    function confirmaEliminacion(id){
        var confirmacion = confirm("Estas seguro de eliminar la carrera?");

        if (confirmacion) {
            document.location.href = '@Url.Content("~/Carrera/Delete/")' + id;
        }
        else {
            alert("Ocurrió un error :(");
        }
    }
</script>