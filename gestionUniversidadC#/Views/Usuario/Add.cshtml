@model gestionUniversidadC_.Models.ViewModels.UsuariosViewModels
@{
    ViewBag.Title = "Agregar usuario";
}

<h2>@ViewBag.Title</h2>


<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Add", "Usuario", FormMethod.Post, new { @class = "" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationMessage("error", new { @class = "text-danger" })

            @Html.LabelFor(d => d.Email)
            @Html.TextBoxFor(d => d.Email, new { @class = "form-control" })
            @Html.ValidationMessage("Email", new { @class = "text-danger" })<br />

            @Html.LabelFor(d => d.Password)
            @Html.PasswordFor(d => d.Password, new { @class = "form-control" })

            @Html.LabelFor(d => d.ConfirmPassword)
            @Html.PasswordFor(d => d.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessage("ConfirmPassword", new { @class = "text-danger" })<br />

            @Html.LabelFor(d => d.Nombre)
            @Html.TextBoxFor(d => d.Nombre, new { @class = "form-control" })


            @Html.LabelFor(d => d.Administrador)
            @Html.DropDownListFor(d => d.Administrador, new SelectList(
                new List<SelectListItem>
                {
                    new SelectListItem { Text = "Sí", Value = "true" },
                    new SelectListItem { Text = "No", Value = "false" }
                }, "Value", "Text"), "Seleccione una opción", new { @class = "form-control" })

            <div style="text-align:right;">
                <input type="submit" class="btn btn-success" value="Guardar" />
            </div>
        }
    </div>
</div>
